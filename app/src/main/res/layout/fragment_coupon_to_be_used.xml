<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_coupon_to_be_used"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ededed"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_coupon_to_be_used_no_data"
        android:layout_width="123dp"
        android:layout_height="113dp"
        android:layout_gravity="center"
        android:layout_marginBottom="58.5dp"
        android:src="@drawable/coupon_no"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_to_be_used_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</FrameLayout>